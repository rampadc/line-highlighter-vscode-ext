{
	"name": "line-highlighter",
	"author": {
		"name": "Cong Nguyen",
		"url": "https://congx.dev"
	},
	"publisher": "rampadc",
	"license": "Apache-2.0",
	"icon": "icon.png",
	"repository": {
		"url": "https://github.com/rampadc/line-highlighter-vscode-ext",
		"type": "git"
	},
	"displayName": "line-highlighter",
	"description": "Highlight code for demos",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:line-highlighter.highlight-lines"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "line-highlighter.highlight-lines",
				"title": "Highlight Lines"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
